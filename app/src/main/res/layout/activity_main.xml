<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2bfb6"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_back"
        android:fontFamily="@font/ubuntu_light"
        android:gravity="center"
        android:padding="25dp"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/firstDesicion"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:fontFamily="@font/ubuntu_light"
        android:padding="10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.3" />


    <TextView
        android:id="@+id/secondDesicion"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:fontFamily="@font/ubuntu_light"
        android:padding="10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />


    <TextView
        android:id="@+id/textAtributes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_back"
        android:paddingTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/grey_weapon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/weapon_light"
        app:layout_constraintBottom_toBottomOf="@+id/textAtributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/white_weapon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/clipping_weapon"
        app:layout_constraintBottom_toBottomOf="@+id/textAtributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/grey_people"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/people_light"
        app:layout_constraintBottom_toBottomOf="@+id/textAtributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/white_people"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/clipping_people"
        app:layout_constraintBottom_toBottomOf="@+id/textAtributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.5" />

    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/cardStack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/textDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAtributes"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/light_rubles"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ruble_light"
        app:layout_constraintBottom_toBottomOf="@+id/textAtributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/white_rubles"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/clipping_rubles"
        app:layout_constraintBottom_toBottomOf="@+id/textAtributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/light_nature"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nature_light"
        app:layout_constraintBottom_toBottomOf="@+id/textAtributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/white_nature"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/clipping_nature"
        app:layout_constraintBottom_toBottomOf="@+id/textAtributes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAtributes"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>